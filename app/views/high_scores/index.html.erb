<h1>High Scores</h1>

<%= link_to image_tag("cratejumper.jpg"), :crate_jumper_game_index %>

<% if @crate_jumper_high_scores.empty? %>
   <br />
   No scores to show.
   <br /><br />
<% else %>

<table class = "table">
  <tr>
    <th>Name</th>
    <th>Game</th>
    <th>Score</th>
  </tr>

<% @crate_jumper_high_scores.each do |high_score| %>
  <tr>
    <td><%= high_score.first_name %></td>
    <td><%= high_score.game %></td>
    <td><%= high_score.score %></td>
  </tr>
<% end %>
</table>

<% end %>

<br />

