<h1>Store</h1>

<div id = "wrap">
<div class = "store_sidebar">
	View:
	<ul>
	   <li><%= link_to 'Everything', items_path %></li>
	   <li><%= link_to 'Hats', :showHats_items %></li>
	   <li><b><%= link_to 'Tops', :showTops_items %></b></li>
	   <li><%= link_to 'Bottoms', :showBottoms_items %></li>
	   <li><%= link_to 'Shoes', :showShoes_items %></li>
	</ul>
</div>


<table class="store">

<% @items.each do |item| %>
  <tr>
    <td>
	<div class="image">
	<%= link_to (image_tag item.image_url), item %>
	</div>
    </td>
    <td><%= item.name %><br> Type: <%= item.item_type %><br>Price: <%= item.price %><br><%= item.description %></td>
    <td>
	<div class="links">
	    <%# if session[:login] == 1 %>
		<%= link_to 'Edit', edit_item_path(item) %> |
	    	<%= link_to 'Destroy', item, method: :delete, data: 			{ confirm: 'Are you sure?' } %>
	    <%# else %>
		<%= button_to "Buy", item, :confirm => "Are you sure you want to buy " +item.name+ "?" %>
	    <%# end %>
	</div>
    </td>
  </tr>
<% end %>
<% if @items.empty? %>
   No items to show.
<% end %>
</table>
</div>
<br />


<%# if session[:login] == 1 %>
	<%= link_to 'New Item', new_item_path %>
<%# end %>
